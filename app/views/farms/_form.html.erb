<% if @farm.errors.any? %>
<h2>The following errors prevented the farm from being created</h2>
  <ul>
    <% @farm.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>   
  </ul>
<% end %>

<%= form_for [@farm] do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to "Back to homepage", root_path %>